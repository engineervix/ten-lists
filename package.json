{
  "name": "ten-lists",
  "version": "2.0.0",
  "description": "A daily Bible listening app based on Professor Grant Horner's Bible-Reading System",
  "private": true,
  "author": "Victor Miti",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/validate-config.js && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:cov": "vitest --coverage",
    "commit": "git-cz",
    "stylelint": "stylelint \"**/*.{scss,css}\" --ignore-path .gitignore",
    "prettier": "prettier . \"!**/*.webmanifest\" --write",
    "eslint": "eslint \"**/*.js\" --ignore-path .gitignore",
    "post-build": "node scripts/post-build.js",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production'){process.exit(1)} \" || husky",
    "prepare-deploy": "npm run build && npm run post-build",
    "release": "commit-and-tag-version"
  },
  "dependencies": {
    "@phosphor-icons/web": "^2.1.1",
    "alpinejs": "^3.14.9",
    "dayjs": "^1.11.13",
    "plyr": "^3.7.8",
    "sweetalert2": "^11.17.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/eslint-parser": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/cz-commitlint": "^19.8.0",
    "@commitlint/prompt-cli": "^19.8.0",
    "@tailwindcss/typography": "^0.5.16",
    "@vitest/coverage-v8": "^3.0.8",
    "autoprefixer": "^10.4.21",
    "commit-and-tag-version": "^12.5.0",
    "commitizen": "^4.3.1",
    "conventional-changelog-atom": "^5.0.0",
    "daisyui": "^4.12.24",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.5.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "stylelint": "^16.16.0",
    "stylelint-config-standard": "^37.0.0",
    "tailwindcss": "^3.4.17",
    "vite": "^6.2.4",
    "vitest": "^3.0.8"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "parserPreset": "conventional-changelog-atom"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run eslint",
      "npm run prettier"
    ],
    "*.{scss,css}": [
      "npm run stylelint",
      "npm run prettier"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "extends": "plugin:prettier/recommended",
    "parserOptions": {
      "requireConfigFile": false,
      "babelOptions": {
        "presets": [
          "@babel/preset-env"
        ]
      }
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100,
    "ignorePatterns": ["CHANGELOG.md"]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind"
          ]
        }
      ],
      "at-rule-no-deprecated": [
        true,
        {
          "ignoreAtRules": [
            "apply"
          ]
        }
      ]
    },
    "ignoreFiles": [
      "**/dist/**/*.*"
    ]
  },
  "browserslist": [
    "defaults",
    "cover 99.5%"
  ],
  "commit-and-tag-version": {
    "header": "# Changelog\n\nAll notable changes to this project will be documented here.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/), and this project attempts to adhere to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n",
    "types": [
      {
        "type": "feat",
        "section": "üöÄ Features"
      },
      {
        "type": "fix",
        "section": "üêõ Bug Fixes"
      },
      {
        "type": "docs",
        "section": "üìù Docs",
        "hidden": false
      },
      {
        "type": "style",
        "section": "üíÑ Styling",
        "hidden": false
      },
      {
        "type": "refactor",
        "hidden": false,
        "section": "‚ôªÔ∏è Code Refactoring"
      },
      {
        "type": "perf",
        "section": "‚ö°Ô∏è Performance Improvements",
        "hidden": false
      },
      {
        "type": "test",
        "section": "‚úÖ Tests",
        "hidden": false
      },
      {
        "type": "build",
        "section": "‚öôÔ∏è Build System",
        "hidden": false
      },
      {
        "type": "ci",
        "section": "üë∑ CI/CD",
        "hidden": false
      },
      {
        "type": "chore",
        "section": "üöß Others",
        "hidden": true
      },
      {
        "type": "revert",
        "section": "‚è™Ô∏è Reverts",
        "hidden": true
      }
    ],
    "scripts": {
      "prechangelog": "sed -e '1,6d' -i CHANGELOG.md",
      "postchangelog": "sed -e 's/###\\ \\[/##\\ \\[v/g' -i CHANGELOG.md && sed -re 's/##\\ \\[([0-9])/##\\ \\[v\\1/g' -i CHANGELOG.md"
    }
  },
  "engines": {
    "node": "^22 <23"
  }
}
